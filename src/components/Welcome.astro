---
import background from '../assets/background.svg';
import profilePhoto from '../assets/kate-harman.jpg';
---

<div id="container">
	<img id="background" src={background.src} alt="" fetchpriority="high" />
	<main>
		<section id="hero">
			<img id="profile-photo" src={profilePhoto.src} alt="Dr Kate Harman" />
			<h1>Dr Kate Harman</h1>
			<p id="subtitle">Clinical Psychologist</p>
			<p id="bio">
				With over 20 years of experience across the UK and Australia, Kate specialises
				in CBT, ACT, and compassion-focused therapy, creating a warm, client-centered
				environment with particular expertise in mindfulness and working with
				neurodivergent populations.
			</p>
			<section id="links">
				<a class="button" href="https://www.kiddclinic.com.au/">The Kidd Clinic</a>
			</section>
		</section>
	</main>
	<footer>
		<a href="https://www.instagram.com/drkateharman" aria-label="Instagram">
			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
				<path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
				<line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
			</svg>
		</a>
		<a href="https://www.linkedin.com/in/kateharman/" aria-label="LinkedIn">
			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
				<rect width="4" height="12" x="2" y="9"></rect>
				<circle cx="4" cy="4" r="2"></circle>
			</svg>
		</a>
	</footer>
</div>

<style>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
	}

	#container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		min-height: 100%;
		display: flex;
		flex-direction: column;
	}

	main {
		flex: 1;
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 40px 20px;
	}

	#hero {
		display: flex;
		align-items: center;
		flex-direction: column;
		max-width: 480px;
		padding: 48px 40px;
		background: rgba(255, 255, 255, 0.85);
		backdrop-filter: blur(20px);
		border-radius: 24px;
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
	}

	#profile-photo {
		width: 180px;
		height: 180px;
		border-radius: 50%;
		object-fit: cover;
		box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
		margin-bottom: 24px;
	}

	h1 {
		font-size: 32px;
		font-weight: 600;
		color: #111827;
		margin: 0;
	}

	#subtitle {
		font-size: 18px;
		color: #6b7280;
		margin: 8px 0 0;
		font-weight: 500;
	}

	#bio {
		color: #4b5563;
		font-size: 15px;
		line-height: 1.7;
		margin: 24px 0 32px;
		text-align: left;
		align-self: stretch;
	}

	#links {
		display: flex;
		gap: 16px;
	}

	#links a.button {
		display: inline-flex;
		align-items: center;
		padding: 14px 28px;
		color: white;
		text-decoration: none;
		font-weight: 500;
		font-size: 16px;
		background: #111827;
		border-radius: 12px;
		transition: background 0.2s, transform 0.2s;
	}

	#links a.button:hover {
		background: #374151;
		transform: translateY(-2px);
	}

	footer {
		display: flex;
		justify-content: center;
		gap: 32px;
		padding: 24px;
	}

	footer a {
		color: #6b7280;
		transition: color 0.2s, transform 0.2s;
	}

	footer a:hover {
		color: #111827;
		transform: translateY(-2px);
	}

	footer a svg {
		width: 28px;
		height: 28px;
	}

	@media screen and (max-width: 540px) {
		main {
			padding: 24px 16px;
		}

		#hero {
			padding: 32px 24px;
			border-radius: 20px;
		}

		#profile-photo {
			width: 140px;
			height: 140px;
			margin-bottom: 20px;
		}

		h1 {
			font-size: 26px;
		}

		#subtitle {
			font-size: 16px;
		}

		#bio {
			font-size: 14px;
			margin: 20px 0 28px;
		}

		#links a.button {
			padding: 12px 24px;
			font-size: 15px;
		}
	}
</style>
